@article{DeLeeuw1997,
  author = {De Leeuw, W. J. and Berx, G. and Vos, C. B. and Peterse, J. L. and Van de Vijver, M. J. and Litvinov, S. and Van Roy, F. and Cornelisse, C. J. and Cleton-Jansen, A. M.},
